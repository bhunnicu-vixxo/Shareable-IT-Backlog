{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend Dev Server",
      "type": "shell",
      "command": "npm run dev -w frontend",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "custom",
          "pattern": [
            {
              "regexp": "."
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^(?:VITE|vite) v\\d+\\.",
            "endsPattern": "^(?:\\s*Local:\\s*http://|\\s*\\bready in\\b)"
          }
        }
      ]
    }
  ]
}

