{
  "name": "shareable-linear-backlog-backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx watch --inspect src/server.ts",
    "build": "tsc -b",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write src",
    "test": "vitest --pool=threads src",
    "test:run": "vitest run --pool=threads src",
    "migrate:up": "node-pg-migrate up --migrations-dir ../database/migrations",
    "migrate:down": "node-pg-migrate down --migrations-dir ../database/migrations",
    "migrate:create": "node-pg-migrate create --migrations-dir ../database/migrations --migration-file-language sql"
  },
  "dependencies": {
    "@linear/sdk": "^73.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "ip-cidr": "^4.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "zod": "^4.3.6"
  },
  "overrides": {
    "esbuild": "npm:esbuild-wasm@0.27.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.19.9",
    "@types/pg": "^8.16.0",
    "esbuild-wasm": "^0.27.3",
    "eslint": "^9.18.0",
    "globals": "^16.5.0",
    "node-pg-migrate": "^8.0.4",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.18"
  }
}
